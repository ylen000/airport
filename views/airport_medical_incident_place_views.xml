<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="airport_medical_incident_place_action" model="ir.actions.act_window">
        <field name="name">事故地點</field>
        <field name="res_model">airport.medical.incident.place</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="airport_medical_incident_place_view_tree" model="ir.ui.view">
        <field name="name">airport.medical.incident.place.tree</field>
        <field name="model">airport.medical.incident.place</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom">
                <field name="name" string="事故地點名稱" />
                <field name="category" string="所屬分類" />
            </tree>
        </field>
    </record>

    <record id="airport_medical_incident_place_view_form" model="ir.ui.view">
        <field name="name">airport.medical.incident.place.form</field>
        <field name="model">airport.medical.incident.place</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <group>
                        <field name="name" string="事故地點名稱" />
                        <field name="category" string="所屬分類" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
