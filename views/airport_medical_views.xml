<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="airport_medical_action" model="ir.actions.act_window">
        <field name="name">出診單</field>
        <field name="res_model">airport.medical</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="airport_medical_view_tree" model="ir.ui.view">
        <field name="name">airport.medical.tree</field>
        <field name="model">airport.medical</field>
        <field name="arch" type="xml">
            <tree string="Channel" >
                <field name="name" string="病人姓名" />
                <field name="sex_id" string="性別" />
                <field name="nationality_id" string="國籍" />
                <field name="incident_date" string="事發日期" />
                <field name="incident_place_id" string="事故地點" />
                <field name="incident_time_id" string="事發時段" />
                <field name="chief_complaint_id" string="主訴" />
                <field name="diagnosis_id" string="診斷" />
                <field name="treatment_id" string="處置" />
                <field name="result_id" string="結果" />
                <field name="attending_physician_id" string="處置醫師" />
                <field name="attending_nurse_id" string="隨行護士" />
            </tree>
        </field>
    </record>

    <record id="airport_medical_view_form" model="ir.ui.view">
        <field name="name">airport.medical.form</field>
        <field name="model">airport.medical</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <h1>
                        <field name="name" placeholder="姓名"/>
                    </h1>
                    <group>
                        <separator />
                        <group>
                            <field name="identity_id" widget="radio" options="{'horizontal': true}" string="身分"/>
                            <field name="birthday" string="生日"/>
                            <field name="sex_id" widget="radio" options="{'horizontal': true}" string="性別"/>
                            <field name="password_no" string="護照號碼"/>
                            <field name="nationality_id" string="國籍" />
                            <field name="Date" string="日期"/>
                            <field name="Address" string="地址"/>
                            <field name="Phone" string="聯絡電話"/>
                           <!-- <field name="come_reason_id" string="為何至機場"/>
                           <field name="race_id" string="種族" />-->
                        </group>
                        <group>

                            <field name="airport_co_id" string="航空公司"/>
                            <field name="Airplane" string="班機"/>
                            <field name="exit_id" widget="radio" options="{'horizontal': true}" string="出入境"/>
                            <field name="departure_id" string="啟程地"/>
                            <field name="passing_id" string="經過地"/>  
                            <field name="arrival_id" string="目的地"/>               
                        </group>
                    </group>
                    <separator />
                    <notebook>
                        <page string="飛航記錄">
                            <group>
                                <field name="airport_co_id" string="航空公司"/>
                                <field name="departure_id" string="啟程地"/>
                                <field name="arrival_id" string="目的地"/>
                            </group>
                        </page>
                        <page string="電傳文件" >
                            <group>
                                <field name="patient_name" string="病患姓名" />
                                <field name="nationality_id" string="國籍" />
                                <field name="sex_id" widget="radio" string="性別"/>
                                <field name="birthday" string="生日"/>
                                <field name="airport_co_id" string="航空公司"/>
                                <field name="incident_date" string="事發日期" />
                                <field name="incident_place_id" string="事故地點" />
                                <field name="incident_time_id" string="事發時段" />
                                <field name="notification_time" string="通報時間" />
                                <field name="arrival_time" string="到達時間"  />
                            </group>
                        </page>
                         <page string="護理紀錄" >
                            <group>
                                <field name="patient_name" string="病患姓名" required="true"/>
                                <field name="password_no" string="護照號碼"  required="true"/>
                                <field name="attending_nurse_id" string="護士" />
                                <field name="content" string="內容" />
                            </group>
                            <table>
                                <button name="record" string="紀錄" icon="fa-check" type="object" />
                                <button name="reset" string="重寫" icon="fa-times" type="object" />
                            </table>
                            <group>
                             <field name="current_time"/>
                             <field name="display_content" readonly="1"/>
                            </group>
                        </page>
                        <page string="處置紀錄">
                            <group>
                                <field name="chief_complaint_id" string="主訴" />
                                <field name="diagnosis_id" string="診斷" domain="[('use', '=', '1')]" />
                                <field name="treatment_id" string="處置" />
                                <field name="result_id" string="結果" />
                                <field name="treatment_hospital_id" string="若在醫院的處置" />
                                <field name="personal_opinion" string="個人意見" />
                                <field name="attending_physician_id" string="負責醫師" />
                                <field name="attending_nurse_id" string="隨行護士" />
                                <field name="test1" string="test" />
                            </group>
                        </page>
                        <page string="診斷證明">
                        <group>
                            <group>
                                <field name="name" string="姓名" />
                            </group>
                            <group>
                                <field name="birthday" string="生日" />
                            </group>
                        </group>
                         <group>
                            <group>
                                <field name="sex_id" string="生理性別" />
                            </group>
                            <group>
                                <field name="name" string="護照號碼" />
                            </group>
                        </group>
                        <group string="診斷結果">
                            <group>
                                <group>
                                    <field name="diagnosis_id" string="診斷"/>
                                </group>
                                <group>
                                    <field name="diagnosis_category" string="-" />
                                </group>
                            </group>
                            <group>
                                <field name="diagnosis_detail" string="-" />
                            </group>
                        </group>
                        <group string="醫師囑言備註">
                            <group>
                                <group>
                                    <field name="doctor_comment" string="醫師囑言"/>
                                </group>
                                <group>
                                    <field name="doctor_comment" string="-" />
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="doctor_comment" string="-" />
                                </group>
                                <group>
                                </group>
                            </group>
                        </group>
                        <group>
                             <field name="doctor_remark" string="備註" />
                        </group>
                        <group  string="簽署">
                            <group>
                                <group>
                                    <field name="attending_physician_id" string="院長"/>
                                </group> 
                                
                                <group>
                                    <field name="attending_physician_id" string="診治醫師" />
                                </group> 
                            </group>
                        </group>
                        </page>
                        <page string="醫療收費" >
                            <group>
                                <group string="疾病管制署篩檢">
                                    <field name="assist_screening_id" string="協助篩檢" />
                                    <field name="incident_place_id" string="喉嚨採檢" />
                                    <field name="incident_time_id" string="抽血採檢" />
                                    <field name="personal_opinion" string="其他" />
                                </group>
                                <group string="健康評估">
                                    <field name="assist_screening_id" string="姓名"  />
                                    <field name="assist_screening_id" string="關係"  />
                                    <field name="personal_opinion" string="體溫"  />
                                </group>
                            </group>
                            <group string="轉診後送">
                                <group>
                                    <group>
                                        <field name="assist_screening_id" string="一般通關" />
                                    </group>
                                    <group>
                                        <field name="assist_screening_id" string="緊急通關" />
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="assist_screening_id" string="公務門" />
                                    </group>
                                    <group>
                                        <field name="assist_screening_id" string="機坪" />
                                    </group>
                                </group>
                            </group>
                            <group>
                                <group string="救護車">
                                    <field name="assist_screening_id" string="醫療中心" />
                                    <field name="incident_place_id" string="民間" />
                                    <field name="incident_time_id" string="消防隊" />
                                </group>
                                <group string="轉送">
                                    <field name="assist_screening_id" string="民間"  />
                                    <field name="assist_screening_id" string="消防隊"  />
                                    <field name="personal_opinion" string="轉送醫院"  />
                                    <field name="personal_opinion" string="隨車人員" />
                                </group>
                            </group>
                            <group string="醫療費用">
                                <field name="Phone" string="初診費"/>
                                <field name="Phone" string="救護車費用"/>
                            </group>
                            <group>
                                <group string="自付">
                                    <field name="assist_screening_id" string="是否自付"/>
                                    <field name="Phone" string="費用"/>
                                </group>
                                <group string="請款">
                                    <field name="assist_screening_id" string="是否請款"/>
                                    <field name="Phone" string="費用"/>
                                </group>
                            </group>
                            <group string="自付">
                                <field name="assist_screening_id" string="支付方式" />
                                <field name="assist_screening_id" string="幣別" />
                                <field name="assist_screening_id" string="兌換後台幣金額" />
                                <field name="assist_screening_id" string="是否收費異常" />
                                <field name="personal_opinion" string="收費異常原因" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>